{
  "name": "vanilla-slide",
  "version": "2.0.0",
  "description": "A modern, lightweight vanilla JavaScript carousel slider with infinite loop and auto-play features",
  "main": "dist/vanilla-slide.js",
  "module": "dist/vanilla-slide.esm.js",
  "types": "dist/vanilla-slide.d.ts",
  "scripts": {
    "dev": "rollup -c -w",
    "build": "rollup -c && npm run build:public",
    "build:public": "mkdir -p public && cp -r examples/* public/ && cp -r dist public/ && cp -r src public/",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.js",
    "prepare": "npm run build"
  },
  "keywords": [
    "slider",
    "carousel",
    "slideshow",
    "vanilla-js",
    "javascript",
    "es6"
  ],
  "author": "",
  "license": "MIT",
  "type": "module",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-terser": "^0.4.4",
    "babel-jest": "^29.7.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "rollup": "^4.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SiHyung-Lee/vanilla-slide.git"
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ]
}
